{% block title %}contact{% endblock %}

{% block home %}
<div class="container-fluid page-header py-5">
            <h1 class="text-center text-white display-6">Contact</h1>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="breadcrumb-item active text-white">Contact</li>
            </ol>
        </div>
 <!-- Contact Start -->
        <div class="container-fluid contact py-5">
            <div class="container py-5">
                <div class="p-5 bg-light rounded">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="text-center mx-auto" style="max-width: 700px;">
                                <h1 class="text-primary">Entrer en contact</h1>
                               
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="h-100 rounded">
                                <iframe class="rounded w-100" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d205419.69706957776!2d10.836021690495684!3d36.44105286849818!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1302a2a72e87bdad%3A0xabc1a9ed18e663e7!2z2KjZhtmKINiu2YrYp9ix!5e0!3m2!1sar!2stn!4v1705489171642!5m2!1sar!2stn" 
